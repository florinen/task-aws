{
 "builders": [{
    "type": "amazon-ebs",
    "region": "eu-west-1",
    "source_ami": "ami-082083b64ec9ae91f",
    "instance_type": "t2.micro",
    "ssh_username": "centos",
    "ami_name": "nextcloud-{{timestamp}}",
    "source_ami_filter": {
        "most_recent": true
    },
    "tags": {
        "Name": "nextcloud-{{timestamp +1}}",
        "OS_Version": "Centos 7"
    }

     }],
     "provisioners": [
         {
             "type": "shell",
             "execute_command": "chmod +x '{{ .Path }}'; sudo bash '{{ .Path }}'",
             "scripts": [ ".nc_install.sh" ]
              
         },
         {
            "type": "shell",
            "execute_command": "chmod +x '{{ .Path }}'; sudo bash '{{ .Path }}'",
            "scripts": [".print.sh"]
          }
     ]

}
